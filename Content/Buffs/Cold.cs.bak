using Terraria;
using Terraria.ModLoader;
using Terraria.ID;

namespace ChallengingTerrariaMod.Content.Buffs
{
    public class Cold : ModBuff
    {
        public override void SetStaticDefaults()
        {
            DisplayName.SetDefault("Cold");
            Description.SetDefault("-10% mining speed."); //
            Main.debuff[Type] = true;
            Main.pvpBuff[Type] = true;
            Main.buffNoSave[Type] = true; // Buffs de status geralmente não salvam
            Main.buffNoTimeDisplay[Type] = true; // Não exibe o tempo, pois é gerenciado pelo sistema de temperatura
        }

        public override void Update(Player player, ref int buffIndex)
        {
            player.pickSpeed += 0.10f; // -10% mining speed (maior valor = mais lento)
        }
    }
}