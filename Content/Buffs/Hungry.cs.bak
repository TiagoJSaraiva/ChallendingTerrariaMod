// ChallengingTerrariaMod/Content/Buffs/Hungry.cs
using Terraria;
using Terraria.ModLoader;
using Terraria.ID;

namespace ChallengingTerrariaMod.Content.Buffs
{
    public class Hungry : ModBuff
    {
        public override void SetStaticDefaults()
        {
            DisplayName.SetDefault("Hungry");
            Description.SetDefault("You're hungry! Mining speed, damage, and critical strike chance are reduced.");
            Main.debuff[Type] = true;
            Main.pvpBuff[Type] = true;
            Main.buffNoSave[Type] = true;
            BuffID.Sets.NurseCannotRemoveDebuff[Type] = true;
        }

        public override void Update(Player player, ref int buffIndex)
        {
            player.pickSpeed += 0.15f; // 15% mais lento
            player.GetDamage(DamageClass.Generic) -= 0.10f; // 10% de redução de dano
            player.GetCritChance(DamageClass.Generic) -= 5f/100f; // 5% de redução de chance de crítico
        }
    }
}