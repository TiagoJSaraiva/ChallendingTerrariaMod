// ChallengingTerrariaMod/Content/Buffs/Peckish.cs
using Terraria;
using Terraria.ModLoader;
using Terraria.ID;

namespace ChallengingTerrariaMod.Content.Buffs
{
    public class Peckish : ModBuff
    {
        public override void SetStaticDefaults()
        {
            DisplayName.SetDefault("Peckish");
            Description.SetDefault("Feeling a bit peckish. Mining speed and damage are slightly reduced.");
            Main.debuff[Type] = true;
            Main.pvpBuff[Type] = true;
            Main.buffNoSave[Type] = true;
            BuffID.Sets.NurseCannotRemoveDebuff[Type] = true;
        }

        public override void Update(Player player, ref int buffIndex)
        {
            player.pickSpeed += 0.10f; // 10% mais lento
            player.GetDamage(DamageClass.Generic) -= 5f / 100f; // 5% de redução de dano 
        }
    }
}