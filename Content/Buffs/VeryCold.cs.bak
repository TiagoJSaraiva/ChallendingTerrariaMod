using Terraria;
using Terraria.ModLoader;
using Terraria.ID;

namespace ChallengingTerrariaMod.Content.Buffs
{
    public class VeryCold : ModBuff
    {
        public override void SetStaticDefaults()
        {
            DisplayName.SetDefault("Chilled");
            Description.SetDefault("-15% mining speed, -1 hp/s, 30% chance to gain Chilled debuff (30s) every 60 ticks."); //
            Main.debuff[Type] = true;
            Main.pvpBuff[Type] = true;
            Main.buffNoSave[Type] = true;
            // Para o debuff 'Chilled' que você pode contrair, talvez não use buffNoTimeDisplay,
            // mas para o buff principal que mantém o efeito, pode usar.
            // Vou manter buffNoTimeDisplay para os buffs principais do sistema de temperatura.
            Main.buffNoTimeDisplay[Type] = true;
        }

        public override void Update(Player player, ref int buffIndex)
        {
            player.pickSpeed += 0.15f; // -15% mining speed

            // -1 hp/s (caso a regeneração do jogador seja positiva)
            if (player.lifeRegen > 0)
            {
                player.lifeRegen = 0; // Zera a regeneração para que a penalidade seja sentida
            }
            player.lifeRegen -= 60; // 60 ticks = 1 hp/s. -1 hp/s

            // 30% de chance de contrair debuff Chilled por 30 segundos a cada 60 ticks
            // Esta parte da lógica deve ser gerenciada no WarmthSystem.cs ou WarmthPlayer.cs
            // porque ela envolve checagem de tempo e chances, não apenas efeitos passivos.
            // No entanto, se este 'Chilled' é o debuff que você quer aplicar por 30s, ele funcionaria assim.
            // Vou assumir que o "debuff Chilled" que se contrai é este mesmo buff.
            if (Main.GameUpdateCount % 60 == 0 && Main.rand.NextFloat() < 0.30f && !player.HasBuff(BuffID.Chilled))
            {
                player.AddBuff(BuffID.Chilled, 30 * 60); // 30 segundos
            }
        }
    }
}