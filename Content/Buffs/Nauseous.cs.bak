// ChallengingTerrariaMod/Content/Buffs/Nauseous.cs
using Terraria;
using Terraria.ModLoader;

namespace ChallengingTerrariaMod.Content.Buffs
{
    public class Nauseous : ModBuff
    {
        public override void SetStaticDefaults()
        {
            DisplayName.SetDefault("Nauseous");
            Description.SetDefault("You feel extremely nauseous. Armor is heavily reduced, and life/mana regeneration is halted. You cannot eat.");
            Main.debuff[Type] = true;
            Main.pvpBuff[Type] = true;
            Main.buffNoSave[Type] = false; // Este buff pode ser salvo se quiser que persista
            // BuffID.Sets.NurseCannotRemove[Type] = true; // Enfermeira não remove
        }

        public override void Update(Player player, ref int buffIndex)
        {
            player.statDefense -= (int)(player.statDefense * 0.30f); // Reduz armadura em 30%
            player.lifeRegen = 0; // Impede regeneração de vida
            player.manaRegenBonus = 0; // Impede regeneração de mana
            player.manaRegenDelay = 60 * 60 * 60; // Atraso imenso para regeneração de mana
        }
    }
}